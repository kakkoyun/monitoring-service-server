<%= content_for :header do -%>
    <h1>
      Listing Servers
      <span class="actions">
        <%= link_to 'New Server', new_server_path, class: 'btn btn-success' %>
      </span>
    </h1>
<%- end -%>



<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @servers.each do |server| %>
      <tr>
        <td><%= server.name %></td>
        <td class="pull-right">
          <%= link_to 'Show', server, class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_server_path(server), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
