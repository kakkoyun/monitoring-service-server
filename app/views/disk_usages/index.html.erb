<%= content_for :header do -%>
    <h1>Listing Disk Usages
      <span class="actions">
        <%= link_to 'New Disk usage', new_disk_usage_path, class: 'btn btn-success' %>
      </span>
    </h1>
<%- end -%>

<table class="table table-striped">
  <thead>
  <tr>
        <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @disk_usages.each do |disk_usage| %>
  <tr>
        <td class="pull-right">
      <%= link_to 'Show', disk_usage, class: 'btn btn-sm btn-info' %>
      <%= link_to 'Edit', edit_disk_usage_path(disk_usage), class: 'btn btn-sm btn-warning' %>
      <%= link_to 'Destroy', disk_usage, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'%>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
