<div class="page-header">
  <h1><%= t('.title') %>
    <span class="actions">
      <%= link_to t('.new'), new_oauth_application_path, class: 'btn btn-success' %>
    </span>
  </h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.callback_url') %></th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @applications.each do |application| %>
      <tr id="application_<%= application.id %>">
        <td><%= application.name %></td>
        <td><%= application.redirect_uri %></td>
        <td class="pull-right">
          <%= link_to "Show", oauth_application_path(application), class: 'btn btn-sm btn-info' %>
          <%= link_to t('doorkeeper.applications.buttons.edit'), edit_oauth_application_path(application), class: 'btn btn-sm btn-warning' %>
          <%= render 'delete_form', application: application %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
